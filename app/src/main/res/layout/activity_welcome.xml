<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".feature.welcome.WelcomeActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_small"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/size_small"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/size_small" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/size_small"/>

    </android.support.constraint.ConstraintLayout>

</layout>